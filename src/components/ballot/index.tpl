                <button class="shake-button" onClick={::shake}>Shake It</button>
            </div>

        </div>

        <div class="ballot" style={{display: ::question() ? "block" : "none"}}>
            <div class="ballot-list" style={{display: ::answered() ? "none" : "flex"}}>
